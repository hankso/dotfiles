# use `echo some_text | tb` to share msg
alias tb="nc termbin.com 9999"

# python development
alias ipy="ipython3"
alias pip="python3 -m pip"

# user defined
alias todo="todolist"
alias due="todolist l"

# some more ls aliases
alias ll='ls -alF'
alias lh='ls -alh'
alias la='ls -A'
alias l='ls -lh'
alias tree='tree -ACh'

# memory usage
alias free='free -lht'

# some df aliases
alias df='df -lhT'

# some du aliases
alias du='du -sch '
